<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="vuapos.Presentation.Views.Customer.CreateCustomerDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:vuapos.Presentation.Views.Customer"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Create Customer">

    <StackPanel Padding="20" Spacing="10">
        <TextBlock Text="Enter Customer Details" FontSize="18" FontWeight="Bold"/>
        <TextBox PlaceholderText="Name" x:Name="NameInput"/>
        <TextBox PlaceholderText="Phone" x:Name="PhoneInput"/>
        <TextBox PlaceholderText="Email" x:Name="EmailInput"/>
        <Button Content="Create" Click="OnCreateClicked"/>
    </StackPanel>
</Window>
