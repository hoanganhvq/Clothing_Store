<?xml version="1.0" encoding="utf-8"?>
<ContentDialog
    x:Class="vuapos.Presentation.Views.Promotion.AddPromotionDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:vuapos.Presentation.Views.Promotion"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"

    PrimaryButtonText="Add"
    SecondaryButtonText="Cancel"
    PrimaryButtonClick="PrimaryButton_Click">

    <StackPanel Spacing="10">
        <TextBox x:Name="PromotionNameTextBox" Header="Promotion Name" />
        <TextBox x:Name="DiscountPercentageTextBox" Header="Discount Percentage (%)" InputScope="Number" />
        <DatePicker x:Name="StartDatePicker" Header="Start Date" />
        <DatePicker x:Name="EndDatePicker" Header="End Date" />
        <TextBlock x:Name="ErrorTextBlock" Foreground="Red" Visibility="Collapsed" />
    </StackPanel>
</ContentDialog>
