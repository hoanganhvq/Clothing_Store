<UserControl x:ConnectionId='1'
    x:Class="vuapos.Presentation.Views.Category.CategoryPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:vuapos.Presentation.Views.Category"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:vuapos.Presentation.Models"
    mc:Ignorable="d">

    <Grid Background="White" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="60"/>

        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="20" HorizontalAlignment="Stretch">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Button x:ConnectionId='11' Content="Add Category" Width="150" Height="40" 
                                              Background="#C19256" Foreground="White" 
                    BorderBrush="Transparent" CornerRadius="5" Grid.Column="0">
                <Button.ContentTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <FontIcon Glyph="&#xE710;" 
                  FontFamily="Segoe MDL2 Assets" 
                  FontSize="12" 
                  Margin="0,0,8,0"/>
                            <TextBlock Text="Add Category"/>
                        </StackPanel>
                    </DataTemplate>
                </Button.ContentTemplate>
            </Button>
            <AutoSuggestBox x:ConnectionId='12' x:Name="SearchTextBox"                                                  
                                                                        Width="300" Margin="0,0,0,0" 
                            PlaceholderText="Search Category..." VerticalAlignment="Center" Grid.Column="2"/>
        </Grid>

        <Grid Grid.Row="1" Padding="10" Background="#F5F5F5" BorderBrush="#D3D3D3" BorderThickness="0,0,0,1" 
              Margin="20,0,20,0" CornerRadius="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" MinWidth="200"/>
                <ColumnDefinition Width="200"/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="Name" FontWeight="Bold" VerticalAlignment="Center" 
                       HorizontalAlignment="Left" Margin="10,0" Grid.Column="0"/>
            <TextBlock Text="Action" FontWeight="Bold" VerticalAlignment="Center" 
                       HorizontalAlignment="Left" Margin="10,0" Grid.Column="1"/>
        </Grid>

        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto" Margin="20,0,20,20">
            <ListView x:ConnectionId='5' x:Name="CategoryListView" 
                                                                              
                      HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                       CornerRadius="5">
                <ListView.ItemTemplate>
                    <DataTemplate                             >
                        <Grid x:ConnectionId='7' Margin="0,5" Padding="10" Background="White" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" MinWidth="200"/>
                                <ColumnDefinition Width="200"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock x:ConnectionId='8'                      VerticalAlignment="Center" FontSize="16" 
                                       HorizontalAlignment="Left" Margin="10,0" Grid.Column="0"/>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center" 
                                        Grid.Column="1" Margin="10,0">
                                <Button x:ConnectionId='9' Style="{StaticResource ActionButtonStyle}"
                                    Tag="{Binding}"
                                                              >
                                    <FontIcon Glyph="&#xE70F;" 
          FontFamily="Segoe MDL2 Assets" 
          Foreground="#5B5FC7"/>
                                </Button>
                                <Button x:ConnectionId='10' Style="{StaticResource ActionButtonStyle}"
                                    Margin="5,0,0,0"
                                    Tag="{Binding}"
                                                                >
                                    <FontIcon Glyph="&#xE74D;" 
          FontFamily="Segoe MDL2 Assets" 
          Foreground="#E74C3C"/>
                                </Button>

                            </StackPanel>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </ScrollViewer>

        <Grid Grid.Row="3" Margin="5,0,5,0" HorizontalAlignment="Center">
            <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,10">
                <Button x:ConnectionId='2' Content="Previous"                            Width="100" Height="35" Margin="10,0,10,0" Background="#C19256" Foreground="White" BorderBrush="Transparent" CornerRadius="5"/>
                <TextBlock x:ConnectionId='3' x:Name="CurrentPageTextBlock" Text="Page 1" VerticalAlignment="Center" FontSize="16" Margin="20,0" />
                <Button x:ConnectionId='4' Content="Next"                        Width="100" Height="35" Margin="10,0,10,0" Background="#C19256" Foreground="White" BorderBrush="Transparent" CornerRadius="5"/>
            </StackPanel>

        </Grid>
    </Grid>
</UserControl>

