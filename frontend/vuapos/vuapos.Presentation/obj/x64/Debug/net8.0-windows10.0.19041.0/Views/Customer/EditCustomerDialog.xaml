<Window x:ConnectionId='1'
    x:Class="vuapos.Presentation.Views.Customer.EditCustomerDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Edit Customer">

    <Grid Padding="20">
        <StackPanel>
            <TextBlock Text="Edit Customer" FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>

            <TextBlock Text="Name:" FontWeight="SemiBold"/>
            <TextBox x:ConnectionId='2'                                            Margin="0,0,0,10"/>

            <TextBlock Text="Phone:" FontWeight="SemiBold"/>
            <TextBox x:ConnectionId='3'                                             Margin="0,0,0,10"/>

            <TextBlock Text="Email:" FontWeight="SemiBold"/>
            <TextBox x:ConnectionId='4'                                             Margin="0,0,0,20"/>

            <TextBlock Text="Points:" FontWeight="SemiBold"/>
            <TextBox x:ConnectionId='5'                                             Margin="0,0,0,20"
                     InputScope="Number"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button x:ConnectionId='6' Content="Save"                       Margin="0,0,10,0"/>
                <Button x:ConnectionId='7' Content="Cancel"                        />
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>

