<?xml version="1.0" encoding="utf-8"?>
<UserControl x:ConnectionId='1'
    x:Class="vuapos.Presentation.Views.Report.ReportPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:vuapos.Presentation.Views.Report"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:model="using:vuapos.Presentation.Models"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    >
    <Grid Padding="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Tiêu đề -->
        <TextBlock Text="Báo cáo bán hàng" 
                   Style="{StaticResource TitleTextBlockStyle}" 
                   Margin="0,0,0,20" 
                   Grid.Row="0"/>

        <!-- Lọc và điều khiển -->
        <Grid Grid.Row="1" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="Từ ngày:" 
                       VerticalAlignment="Center" 
                       Grid.Column="0" 
                       Margin="0,0,10,0"/>

            <CalendarDatePicker x:ConnectionId='18'                                                  
                              Grid.Column="1" 
                              Margin="0,0,20,0"/>

            <TextBlock Text="Đến ngày:" 
                       VerticalAlignment="Center" 
                       Grid.Column="2" 
                       Margin="0,0,10,0"/>

            <CalendarDatePicker x:ConnectionId='19'                                                
                              Grid.Column="3" 
                              Margin="0,0,20,0"/>

            <Button x:ConnectionId='20' Content="Tạo báo cáo" 
                                                                   
                    Style="{StaticResource SecondaryButtonStyle}" 
                    Grid.Column="4" 
                    HorizontalAlignment="Right"/>
        </Grid>

        <!-- Nội dung báo cáo -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Bảng dữ liệu -->
            <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
                    CornerRadius="8" 
                    BorderThickness="1" 
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" 
                    Padding="16" 
                    Margin="0,0,10,0"
                    Grid.Column="0">

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Chi tiết sản phẩm" 
                               Style="{StaticResource SubtitleTextBlockStyle}" 
                               Margin="0,0,0,10" 
                               Grid.Row="0"/>

                    <ListView x:ConnectionId='9'                                                       
                              Grid.Row="1"
                              Background="Transparent">
                        <ListView.ItemTemplate>
                            <DataTemplate                          >
                                <Grid x:ConnectionId='12' Margin="0,8">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock x:ConnectionId='13'                             
                                               Grid.Column="0" 
                                               VerticalAlignment="Center"/>

                                    <TextBlock x:ConnectionId='14'                          
                                               Grid.Column="1" 
                                               Width="80" 
                                               TextAlignment="Right" 
                                               VerticalAlignment="Center"/>

                                    <TextBlock x:ConnectionId='15'                                                                     
                                               Grid.Column="2" 
                                               Width="100" 
                                               TextAlignment="Right" 
                                               VerticalAlignment="Center"/>

                                    <TextBlock x:ConnectionId='16'                                                                     
                                               Grid.Column="3" 
                                               Width="120" 
                                               TextAlignment="Right" 
                                               FontWeight="SemiBold" 
                                               VerticalAlignment="Center"/>
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                        <ListView.HeaderTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Text="Sản phẩm" 
                                               Grid.Column="0" 
                                               FontWeight="SemiBold"/>

                                    <TextBlock Text="Số lượng" 
                                               Grid.Column="1" 
                                               Width="80" 
                                               TextAlignment="Right" 
                                               FontWeight="SemiBold"/>

                                    <TextBlock Text="Đơn giá" 
                                               Grid.Column="2" 
                                               Width="100" 
                                               TextAlignment="Right" 
                                               FontWeight="SemiBold"/>

                                    <TextBlock Text="Thành tiền" 
                                               Grid.Column="3" 
                                               Width="120" 
                                               TextAlignment="Right" 
                                               FontWeight="SemiBold"/>
                                </Grid>
                            </DataTemplate>
                        </ListView.HeaderTemplate>
                    </ListView>

                    <!-- Loading state -->
                    <ProgressRing x:ConnectionId='10'                                                      
                                 HorizontalAlignment="Center" 
                                 VerticalAlignment="Center" 
                                 Width="50" 
                                 Height="50"
                                 Grid.Row="1"/>
                </Grid>
            </Border>

            <!-- Biểu đồ -->
            <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
                    CornerRadius="8" 
                    BorderThickness="1" 
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" 
                    Padding="16" 
                    Margin="10,0,0,0"
                    Grid.Column="1">

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Biểu đồ doanh thu" 
                               Style="{StaticResource SubtitleTextBlockStyle}" 
                               Margin="0,0,0,10" 
                               Grid.Row="0"/>

                    <!-- Biểu đồ cột -->
                    <Grid x:ConnectionId='5' x:Name="ChartContainer" 
                          Grid.Row="1">

                        <!-- Chart được vẽ bằng code-behind -->
                        <Canvas x:ConnectionId='6' x:Name="ChartCanvas">
                            <!-- Y-axis -->
                            <Line x:ConnectionId='7' x:Name="YAxis" 
                                  Stroke="{ThemeResource TextFillColorSecondaryBrush}" 
                                  StrokeThickness="1" />

                            <!-- X-axis -->
                            <Line x:ConnectionId='8' x:Name="XAxis" 
                                  Stroke="{ThemeResource TextFillColorSecondaryBrush}" 
                                  StrokeThickness="1" />
                        </Canvas>
                    </Grid>
                </Grid>
            </Border>
        </Grid>

        <!-- Tổng kết -->
        <Grid Grid.Row="3" Margin="0,20,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
                    CornerRadius="8" 
                    BorderThickness="1" 
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" 
                    Padding="16" 
                    Margin="0,0,10,0"
                    Grid.Column="0">

                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Tổng số sản phẩm đã bán:" 
                               Style="{StaticResource BodyStrongTextBlockStyle}"/>

                    <TextBlock x:ConnectionId='4'                                                   
                               Style="{StaticResource TitleTextBlockStyle}" 
                               Margin="8,0,0,0"/>
                </StackPanel>
            </Border>

            <Border Background="{ThemeResource AccentFillColorDefaultBrush}" 
                    CornerRadius="8" 
                    Padding="16" 
                    Margin="10,0,0,0"
                    Grid.Column="1">

                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Tổng doanh thu:" 
                               Style="{StaticResource BodyStrongTextBlockStyle}" 
                               Foreground="White"/>

                    <TextBlock x:ConnectionId='3'                                                                                                 
                               Style="{StaticResource TitleTextBlockStyle}" 
                               Foreground="White" 
                               Margin="8,0,0,0"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Error message -->
        <InfoBar x:ConnectionId='2'                                                                                                        
                                                                       
                 Severity="Error"
                 Grid.Row="3"
                 VerticalAlignment="Bottom"
                 Margin="0,20,0,0"/>
    </Grid>
</UserControl>

