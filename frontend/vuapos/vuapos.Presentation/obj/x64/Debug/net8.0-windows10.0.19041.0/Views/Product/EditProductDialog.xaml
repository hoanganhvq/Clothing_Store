<?xml version="1.0" encoding="utf-8"?>
<ContentDialog x:ConnectionId='1'
    x:Class="vuapos.Presentation.Views.Product.EditProductDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:vuapos.Presentation.Views.Product"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    PrimaryButtonText="Lưu"
    CloseButtonText="Hủy"
                                            >

    <StackPanel Spacing="10">
        <TextBlock x:ConnectionId='2' x:Name="errorTextBlock" Foreground="Red" Visibility="Collapsed" />
        <TextBox x:ConnectionId='3' Header="Code" x:Name="ProductCodeTextBox" />
        <TextBox x:ConnectionId='4' Header="Product Name" x:Name="ProductNameTextBox" />
        <ComboBox x:ConnectionId='5' Header="Category"
                  x:Name="CategoryComboBox"
                  DisplayMemberPath="Name"
                  Width="300" />
        <TextBox x:ConnectionId='6' Header="Price" x:Name="PriceTextBox" InputScope="Number" />
        <TextBox x:ConnectionId='7' Header="Cost Price" x:Name="CostPriceTextBox" InputScope="Number" />
        <TextBox x:ConnectionId='8' Header="Stock quantity" x:Name="StockQuantityTextBox" InputScope="Number" />
        <TextBox x:ConnectionId='9' Header="Discount (%)" x:Name="DiscountTextBox" InputScope="Number" />
        <TextBlock Text="Image Path" />
        <Button x:ConnectionId='10' Content="Choose new image"                           Width="300" HorizontalAlignment="Left" />

        <TextBlock x:ConnectionId='11' x:Name="ImagePathTextBox" />
    </StackPanel>
</ContentDialog>

