<?xml version="1.0" encoding="utf-8"?>
<Window x:ConnectionId='1'
    x:Class="vuapos.Presentation.Views.OrderDetail.OrderDetailPage"
    x:Name="MainRootUser"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:vuapos.Presentation.Views.Product"
    xmlns:model="using:vuapos.Presentation.Models"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:converter="using:vuapos.Presentation.Helpers"
    xmlns:vm="using:vuapos.Presentation.Models"
    xmlns:models="using:vuapos.Presentation.Models"
    mc:Ignorable="d"
    Title="OrderDetailPage">
    
    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <Grid Padding="24">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!-- Header -->
                <StackPanel Grid.Row="0" Orientation="Vertical" Margin="0,0,0,16">
                    <TextBlock Text="Create New Order" 
                       Style="{StaticResource HeaderStyle}" />
                    <Rectangle Height="3" Fill="{StaticResource PrimaryColor}" 
                       Width="60" HorizontalAlignment="Left" Margin="0,4,0,16"/>
                </StackPanel>

                <!-- Product Search Section -->
                <Grid x:ConnectionId='2' Grid.Row="1" Style="{StaticResource CardStyle}"
                                                                               
                      >
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" 
                       Text="Search Products" 
                       Style="{StaticResource SectionHeaderStyle}" />

                    <!-- Search Bar -->
                    <Grid Grid.Row="1" Margin="0,8,0,16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <TextBox x:ConnectionId='27' Grid.Column="0" 
                         Style="{StaticResource TextInputStyle}"
                         PlaceholderText="Enter product name or description" 
                                                                            
                         Margin="0,0,12,0" />

                        <Button x:ConnectionId='28' Grid.Column="1" 
                        Content="Search" 
                        Style="{StaticResource ActionButtonOrderStyle}"
                                                                          />
                    </Grid>

                    <!-- Search Results -->
                    <Grid Grid.Row="2">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <ListView x:ConnectionId='19' Grid.Row="0" 
                                                                                      
                                                                                        
                          BorderThickness="1"
                          BorderBrush="{StaticResource BorderColor}"
                          Background="White"
                          CornerRadius="4"
                          Height="200">
                            <ListView.ItemContainerStyle>
                                <Style TargetType="ListViewItem">
                                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                    <Setter Property="Padding" Value="8"/>
                                    <Setter Property="Margin" Value="0,2"/>
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="CornerRadius" Value="4"/>
                                </Style>
                            </ListView.ItemContainerStyle>
                            <ListView.ItemTemplate>
                                <DataTemplate                            >
                                    <Grid x:ConnectionId='23' Padding="12">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>

                                        <!-- Product Image -->
                                        <Border Grid.Column="0" 
                                        Width="60" Height="60" 
                                        Margin="0,0,16,0"
                                        CornerRadius="6"
                                        Background="{ThemeResource SystemControlBackgroundBaseLowBrush}">
                                            <Image x:ConnectionId='26'                                                                                                       
                                           Stretch="UniformToFill"/>
                                        </Border>

                                        <!-- Product Info -->
                                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                            <TextBlock x:ConnectionId='24'                              
                                               FontWeight="SemiBold"
                                               FontSize="14" />
                                            <TextBlock x:ConnectionId='25'                               
                                               Foreground="{ThemeResource SystemBaseMediumColor}"
                                               FontSize="12"
                                               Margin="0,4,0,0" />
                                        </StackPanel>

                                        <!-- Price & Stock Info -->
                                        <StackPanel Grid.Column="2" Orientation="Vertical" HorizontalAlignment="Right" VerticalAlignment="Center">
                                            <TextBlock Text="{Binding Price, Converter={StaticResource CurrencyConverter}}" 
                                               FontWeight="SemiBold"
                                               Foreground="{StaticResource PrimaryColor}"
                                               HorizontalAlignment="Right" />
                                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,4,0,0">
                                                <FontIcon Glyph="{Binding Stock_Quantity, Converter={StaticResource StockConverter}, ConverterParameter=Icon}" 
                                                 Foreground="{Binding Stock_Quantity, Converter={StaticResource StockConverter}, ConverterParameter=Color}"
                                                 FontFamily="Segoe MDL2 Assets"
                                                 FontSize="12" Margin="0,0,4,0"/>
                                                <TextBlock Text="{Binding Stock_Quantity, Converter={StaticResource StockConverter}, ConverterParameter=Text}" 
                                                   Foreground="{Binding Stock_Quantity, Converter={StaticResource StockConverter}, ConverterParameter=Color}" 
                                                   FontSize="12" />
                                            </StackPanel>
                                        </StackPanel>
                                    </Grid>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>

                        <!-- Add Product Controls -->
                        <Grid Grid.Row="1" Margin="0,16,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0" 
                               Text="Quantity:" 
                               VerticalAlignment="Center" 
                               Margin="0,0,12,0" />

                            <NumberBox x:ConnectionId='20' Grid.Column="1" 
                                                                                       
                               Minimum="1" 
                               SpinButtonPlacementMode="Inline" 
                               SmallChange="1"
                               CornerRadius="4"
                               Width="150" />

                            <Button x:ConnectionId='21' Grid.Column="3" 
                            Content="Add to Order" 
                            Style="{StaticResource ActionButtonOrderStyle}"
                                                                           />
                        </Grid>
                    </Grid>
                </Grid>

                <!-- Order Information -->
                <Grid Grid.Row="2" Margin="0,16,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <!-- Customer Information -->
                    <Grid Grid.Row="0" Style="{StaticResource CardStyle}">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" 
           Text="Customer Information" 
           Style="{StaticResource SectionHeaderStyle}" 
           Margin="0,0,0,16" />

                        <Grid Grid.Row="1">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <TextBox x:ConnectionId='16' Grid.Row="0" Grid.Column="0"
             Style="{StaticResource TextInputStyle}"
             Header="Customer Name" 
                                                                 
             Margin="0,0,8,12" />

                            <TextBox x:ConnectionId='17' Grid.Row="0" Grid.Column="1"
             Style="{StaticResource TextInputStyle}"
             Header="Customer Phone" 
                                                                  
             Margin="8,0,0,12" />

                            <TextBox x:ConnectionId='18' Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
             Style="{StaticResource TextInputStyle}"
             Header="Customer Email" 
                                                                 />
                        </Grid>
                    </Grid>

                    <!-- Order Items -->
                    <Grid Grid.Row="1" Margin="0,16,0,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <!-- Order Items Card -->
                        <Grid Grid.Row="0" Grid.RowSpan="2" Style="{StaticResource CardStyle}">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" 
              Text="Order Items" 
              Style="{StaticResource SectionHeaderStyle}" 
              Margin="0,0,0,16" />

                            <ListView x:ConnectionId='9' Grid.Row="1" 
                                                                        
              BorderThickness="1"
              BorderBrush="{StaticResource BorderColor}"
              Background="White"
              CornerRadius="4">
                                <ListView.ItemContainerStyle>
                                    <Style TargetType="ListViewItem">
                                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                        <Setter Property="Padding" Value="0"/>
                                        <Setter Property="Margin" Value="0"/>
                                        <Setter Property="Background" Value="Transparent"/>
                                    </Style>
                                </ListView.ItemContainerStyle>

                                <ListView.HeaderTemplate>
                                    <DataTemplate>
                                        <Grid Padding="16,12" Background="{StaticResource BackgroundLight}">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="40*" />
                                                <ColumnDefinition Width="15*" />
                                                <ColumnDefinition Width="15*" />
                                                <ColumnDefinition Width="15*" />
                                                <ColumnDefinition Width="15*" />
                                            </Grid.ColumnDefinitions>

                                            <TextBlock Grid.Column="0" Text="Product" FontWeight="SemiBold" />
                                            <TextBlock Grid.Column="1" Text="Unit Price" FontWeight="SemiBold" Margin="20,0" />
                                            <TextBlock Grid.Column="2" Text="Quantity" FontWeight="SemiBold" Margin="20,0" />
                                            <TextBlock Grid.Column="3" Text="Total" FontWeight="SemiBold" Margin="20,0" />
                                            <TextBlock Grid.Column="4" Text="Actions" FontWeight="SemiBold" Margin="20,0,0,0" />
                                        </Grid>
                                    </DataTemplate>
                                </ListView.HeaderTemplate>

                                <ListView.ItemTemplate>
                                    <DataTemplate                               >
                                        <Grid x:ConnectionId='12' Padding="16,12" BorderThickness="0,0,0,1" BorderBrush="{StaticResource BorderColor}">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="40*" />
                                                <ColumnDefinition Width="15*" />
                                                <ColumnDefinition Width="15*" />
                                                <ColumnDefinition Width="15*" />
                                                <ColumnDefinition Width="15*" />
                                            </Grid.ColumnDefinitions>

                                            <TextBlock x:ConnectionId='13' Grid.Column="0" 
                                                                   
                              VerticalAlignment="Center" />

                                            <TextBlock Grid.Column="1" 
                              Text="{Binding Product.Price, Converter={StaticResource CurrencyConverter}}" 
                              Margin="20,0" 
                              VerticalAlignment="Center" />

                                            <TextBlock x:ConnectionId='14' Grid.Column="2" 
                                                                    
                              Margin="20,0" 
                              VerticalAlignment="Center" />

                                            <TextBlock Grid.Column="3" 
                              Text="{Binding Price, Converter={StaticResource CurrencyConverter}}" 
                              Margin="20,0"
                              FontWeight="SemiBold"
                              VerticalAlignment="Center" />

                                            <Button x:ConnectionId='15' Grid.Column="4" 
                           Content="Remove" 
                           Visibility="{Binding ViewModel.VisibilityUI, ElementName=MainRootUser}"               
                           Command="{Binding ViewModel.RemoveOrderDetailCommand, ElementName=MainRootUser}"
                                                      
                           Foreground="{ThemeResource SystemErrorTextColor}"
                           Background="Transparent"
                           BorderThickness="1"
                           BorderBrush="{ThemeResource SystemErrorTextColor}"
                           CornerRadius="4"
                           Padding="8,4"
                           Margin="20,0,0,0" />
                                        </Grid>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                        </Grid>

                        <!-- Phần Khuyến Mãi -->
                        <Grid Grid.Row="2" Margin="0,16,0,0" Style="{StaticResource CardStyle}">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" 
              Text="Khuyến Mãi" 
              Style="{StaticResource SectionHeaderStyle}" 
              Margin="0,0,0,16" />

                            <!-- Mã Giảm Giá -->
                            <Grid Grid.Row="1" Margin="0,0,0,16">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <TextBox x:ConnectionId='7' Grid.Column="0" 
                 Style="{StaticResource TextInputStyle}"
                 Header="Mã Giảm Giá" 
                 PlaceholderText="Nhập mã khuyến mãi"
                                                                      
                 Margin="0,0,12,0" />

                                <Button x:ConnectionId='8' Grid.Column="1" 
                Content="Áp Dụng" 
                Style="{StaticResource SecondaryButtonStyle}"
                                                                      
                VerticalAlignment="Bottom" />
                            </Grid>

                            <!-- Sử dụng điểm khách hàng -->
                            <Grid Grid.Row="2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <CheckBox x:ConnectionId='6' Grid.Column="0"
                  Content="Sử dụng điểm khách hàng" 
                                                                               
                  Foreground="{StaticResource PrimaryDarkColor}"
                  VerticalAlignment="Center" />
                                <TextBlock Grid.Column="2"
                   Text="{Binding ViewModel.CustomerPointsValue, Converter={StaticResource CurrencyConverter}, ElementName=MainRootUser}"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Right"
                   Foreground="{StaticResource PrimaryColor}"
                   FontWeight="SemiBold" />
                            </Grid>
                        </Grid>

                        <!-- Order Summary -->
                        <Grid Grid.Row="3" Margin="0,16,0,0" Style="{StaticResource CardStyle}">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <!-- Tổng tiền hàng -->
                            <TextBlock Grid.Row="0" Grid.Column="1"
               Text="Tổng tiền hàng:"
               HorizontalAlignment="Right"
               Margin="0,0,16,8" />

                            <TextBlock Grid.Row="0" Grid.Column="2"
               Text="{Binding ViewModel.SubTotal, Converter={StaticResource CurrencyConverter}, ElementName=MainRootUser}"
               HorizontalAlignment="Right"
               FontWeight="SemiBold"
               MinWidth="120"
               Margin="0,0,0,8" />

                            <!-- Giảm giá -->
                            <TextBlock Grid.Row="1" Grid.Column="1"
               Text="Giảm giá:"
               HorizontalAlignment="Right"
               Margin="0,0,16,12" />

                            <TextBlock Grid.Row="1" Grid.Column="2"
               Text="{Binding ViewModel.TotalDiscount, Converter={StaticResource CurrencyConverter}, ElementName=MainRootUser}"
               HorizontalAlignment="Right"
               Foreground="{ThemeResource SystemControlErrorTextForegroundBrush}"
               FontWeight="SemiBold"
               MinWidth="120"
               Margin="0,0,0,12" />

                            <!-- Đường kẻ phân cách -->
                            <Rectangle Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3" 
               Height="1" 
               Fill="{StaticResource BorderColor}" 
               Margin="0,0,0,40"/>

                            <!-- Tổng thanh toán -->
                            <TextBlock Grid.Row="2" Grid.Column="1"
               Text="Tổng thanh toán:"
               FontSize="18"
               FontWeight="SemiBold"
               HorizontalAlignment="Right"
               Margin="0,12,16,0" />

                            <TextBlock Grid.Row="2" Grid.Column="2"
               Text="{Binding ViewModel.OrderTotal, Converter={StaticResource CurrencyConverter}, ElementName=MainRootUser}"
               FontSize="18"
               FontWeight="SemiBold"
               Foreground="{StaticResource PrimaryColor}"
               HorizontalAlignment="Right"
               MinWidth="120"
               Margin="0,12,0,0" />
                        </Grid>
                    </Grid>
                </Grid>
                
                <!--Method-->
                <TextBlock Grid.Row="3" 
                           Text="Payment method"
                           FontWeight="SemiBold"
                           FontSize="16"
                           Margin="0,40,0,8" />

                <StackPanel Grid.Row="4" 
                            Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            Spacing="20"
                            Margin="0,8,0,0">
                    <RadioButton x:ConnectionId='5' Content="Cash"
                                 GroupName="PaymentMethod"
                                                                                    />

                    <RadioButton Content="Bank Transfer"
                                 GroupName="PaymentMethod"/>
                </StackPanel>
                <!-- Action Buttons -->
          <StackPanel Grid.Row="5" 
            Orientation="Horizontal" 
            HorizontalAlignment="Right" 
            Margin="0,20,0,0">

                    <Button x:ConnectionId='3' Content="Close" 
                                                           
            Style="{StaticResource SecondaryButtonStyle}"
            Margin="0,0,16,0" />

                    <Button x:ConnectionId='4' Content="Save Order" 
            Style="{StaticResource ActionButtonOrderStyle}"
                                                                     
                                                          />
                </StackPanel>

            </Grid>
        </ScrollViewer>
    </Grid>
</Window>

